{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Authority": "http://localhost:3001/oidc",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "Audience": "https://todo-api.local.ch",
    "Cookie": {
      "Name": ".Ladral.ToDo.Auth"
    },
    "OpenIdConnect": {
      "Scopes": [
        "openid",
        "profile",
        "read:todo",
        "write:todo"
      ]
    }
  },
  "ApiEndpoints": {
    "WeatherApi": "https://localhost:7173"
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
          { "RequestHeaderOriginalHost": "true" }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api-destination": {
            "Address": "https://localhost:7173"
          }
        }
      }
    }
  }
}